<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd"
	default-autowire="byName">

	<bean id="serviceTemplate"
		class="com.onway.platform.common.service.template.impl.ServiceTemplateImpl" />

	<!-- 流水号生成器组件 -->
	<bean id="codeGenerateComponent" class="com.onway.core.service.code.CodeGenerateComponentImpl" />
	
	<!-- 用户信息查询组件 -->
	<bean id="userQueryService" class="com.onway.core.service.impl.UserQueryServiceImpl" />
	
	<!-- 用户信息操作组件 -->
	<bean id="userOperationService" class="com.onway.core.service.impl.UserOperationServiceImpl" />
	
	<!-- banner信息操作组件 -->
	<bean id="bannerQueryService" class="com.onway.core.service.impl.BannerQueryServiceImpl" />
	
	<!-- msg信息操作组件 -->
	<bean id="msgQueryService" class="com.onway.core.service.impl.MsgQueryServiceImpl" />

	<!-- 券信息查询组件 -->
	<bean id="reduceQueryService" class="com.onway.core.service.impl.ReduceQueryServiceImpl" />

	<!-- 活动信息查询组件 -->
	<bean id="activityQueryService" class="com.onway.core.service.impl.ActivityQueryServiceImpl" />
	
	<!-- 养生知识/新闻公告信息查询组件 -->
	<bean id="knowledgeQueryService" class="com.onway.core.service.impl.KnowledgeQueryServiceImpl" />
	
	<!-- 地址操作查询类组件 -->
	<bean id="addressService" class="com.onway.core.service.impl.AddressServiceImpl" />
	
	<!-- 订单查询类组件 -->
	<bean id="orderQueryService" class="com.onway.core.service.impl.OrderQueryServiceImpl" />
	
	<!-- 短信操作类组件 -->
	<bean id="smsComponent" class="com.onway.core.service.impl.SmsComponentImpl" />
	
	<!-- 购物车操作组件 -->
	<bean id="cartService" class="com.onway.core.service.impl.CartServiceImpl" />
	
	<!-- 收藏操作组件 -->
	<bean id="collectService" class="com.onway.core.service.impl.CollectServiceImpl" />
	
	<!-- 商品操作组件 -->
	<bean id="productService" class="com.onway.core.service.impl.ProductServiceImpl" />
	
	<!-- 养生知识/新闻公告信息操作组件  -->
	<bean id="knowledgeOperationService" class="com.onway.core.service.impl.KnowledgeOperationServiceImpl" />
	
	<!-- 提现 查询 操作 组件  -->
	<bean id="withdrawService" class="com.onway.core.service.impl.WithdrawServiceImpl" />
	
	<!-- 反馈  操作 组件  -->
	<bean id="optionOperationService" class="com.onway.core.service.impl.OptionOperationServiceImpl" />
</beans>