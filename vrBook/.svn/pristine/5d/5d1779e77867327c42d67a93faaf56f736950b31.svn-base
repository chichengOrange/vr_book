package com.onway.model.conver;

import com.onway.common.lang.StringUtils;
import com.onway.fyapp.common.dal.dataobject.AddressDO;
import com.onway.model.enums.AddressDefaultEnum;
import com.onway.utils.NumUtil;
import com.onway.web.controller.result.AddressResult;

/**
 * 
* <p>Title: AddressConver</p>  
* <p>Description: 地址实体类 转换</p>  
* @author yugang.ni  
* @date 2018年6月29日  下午4:36:51
 */
public class AddressConver {

	public static AddressResult buildAddressListResult( AddressDO addressDO) {
		if (null == addressDO)
			return null;

		AddressResult addressResult = new AddressResult();
		addressResult.setAddressId(addressDO.getId());
		addressResult.setUserId(addressDO.getUserId());
		addressResult.setName(addressDO.getReUserName());
		addressResult.setCell(NumUtil.getHidePhone(addressDO.getCell()));
		addressResult.setProvince(addressDO.getProvince());
		addressResult.setCity(addressDO.getCity());
		addressResult.setArea(addressDO.getArea());
		addressResult.setAddr(addressDO.getReAddr());
		if(StringUtils.equals(addressDO.getIsDefalt(), AddressDefaultEnum.DEFAULT_YES.getCode()))
			addressResult.setDefaultAddr(true);
		
		return addressResult;
	}

	public static AddressResult buildAddressDetailsResult( AddressDO addressDO) {
		if (null == addressDO)
			return null;

		AddressResult addressResult = new AddressResult();
		addressResult.setAddressId(addressDO.getId());
		addressResult.setUserId(addressDO.getUserId());
		addressResult.setName(addressDO.getReUserName());
		addressResult.setCell(addressDO.getCell());
		addressResult.setProvince(addressDO.getProvince());
		addressResult.setCity(addressDO.getCity());
		addressResult.setArea(addressDO.getArea());
		addressResult.setAddr(addressDO.getReAddr());
		if(StringUtils.equals(addressDO.getIsDefalt(), AddressDefaultEnum.DEFAULT_YES.getCode()))
			addressResult.setDefaultAddr(true);
		
		return addressResult;
	}

}
