package com.onway.core.service;

import com.onway.platform.common.base.BaseResult;

/**
 * 
 * @author lishuaikai
 * @Description 购物车服务类
 * @data 2018年7月2日 上午10:23:23
 */
public interface CartService {

	/**
	 * 加入购物车
	 * @param productId
	 * @param userId
	 * @param productNum
	 * @param stockId
	 * @return
	 */
	public BaseResult addCart(final String productId, final String userId, final String productNum, final String stockId);
	
	/**
	 * 删除购物车中的商品
	 * @param cartId
	 * @return
	 */
	public BaseResult delCart(final String cartId);
	
	/**
	 * 修改购物车中商品的送货方式
	 * @param cartId
	 * @param delivery
	 * @return
	 */
	public BaseResult updateCartDelivery(final String cartId, final String delivery);
}
