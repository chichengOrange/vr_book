package com.onway.model.conver;

import com.onway.fyapp.common.dal.dataobject.UserDO;
import com.onway.fyapp.common.dal.dataobject.WithdrawDO;
import com.onway.model.enums.WithdrawStatusEnum;
import com.onway.utils.DateUtil;
import com.onway.web.controller.result.WithdrawResult;

/**
 * 
* <p>Title: WithdrawConver</p>  
* <p>Description: 提现实体类转换</p>  
* @author yugang.ni  
* @date 2018年6月28日  下午3:32:18
 */
public class WithdrawConver {

	public static WithdrawResult buildWithdrawListResult( WithdrawDO withdrawDO, UserDO userDO) {
		if (null == withdrawDO)
			return null;

		WithdrawResult infoResult = new WithdrawResult();
		infoResult.setHeadImg(userDO.getHeadUrl());
		infoResult.setNickName(userDO.getNickName());
		infoResult.setStatus(WithdrawStatusEnum.getByCode(withdrawDO.getStatus()).message());
		infoResult.setTimeStr(DateUtil.dateToString(withdrawDO.getGmtCreate(), DateUtil.webFormat));
		infoResult.setAmountStr("-"+withdrawDO.getAmount().toSimpleString());
		return infoResult;
	}

	
}
