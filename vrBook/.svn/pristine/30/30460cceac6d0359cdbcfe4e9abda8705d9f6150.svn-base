	/**
	 * 查询记录
	 * @param userId
	 * @param msgType
	 * @param isRead
	 * @param pageNo
	 * @param pageSize
	 * @return
	 */
	public QueryResult<List<MsgResult>> queryMyMsg( String userId, String msgType, String isRead, int pageNo, int pageSize);
	
