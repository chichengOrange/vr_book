	<select id="MS-PROBLEM-SELECTPROBLEM" resultClass="java.util.HashMap">
	        select dp.*,askdu.USER_NAME ASKUSER_NAME,ansdu.USER_NAME ANSWER_USER_NAME  
				from dxs_problem dp 
				left join dxs_user askdu on  dp.ASK_USER_ID = askdu.user_id 
				left join dxs_user ansdu on  dp.ANSWER_USER_ID = ansdu.user_id 
				where dp.DEL_FLG = 1 
				<isNotEmpty property="selectaskusername">
	    			AND askdu.USER_NAME like '%$selectaskusername$%'
	    		</isNotEmpty>
	    		<isNotEmpty property="selectanswerusername">
	    			AND ansdu.USER_NAME like '%$selectanswerusername$%' 
	    		</isNotEmpty>
	    		<isNotEmpty property="saktitle">
	    			AND dp.ASK_TITLE like '%$saktitle$%'
	    		</isNotEmpty>
	    		<isNotEmpty property="status">
	    			AND dp.status = #status#
	    		</isNotEmpty>
	    		<isNotEmpty property="type">
	    			AND dp.type = #type#
	    		</isNotEmpty>
	    		order by  dp.GMT_CREATE desc 
	    		LIMIT $offset$, $limit$
    </select>

