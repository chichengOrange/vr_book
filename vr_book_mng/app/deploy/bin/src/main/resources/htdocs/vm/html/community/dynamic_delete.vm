<script src="js/emoji.js"></script>
<script type="text/javascript">
$('.datetimepicker').datetimepicker({
	minView: "month",//设置只显示到月份
    format: 'yyyy-mm-dd',
    language:  'zh-CN',
    autoclose:true,//选中关闭
    todayBtn: true//今日按钮
})
function clean(){
	$("#a input").val("");
	$("#a select").val("");
}
function sorce(){
	$('#mytab').bootstrapTable("selectPage",1);	
}
var all;
//生成用户数据
$('#mytab').bootstrapTable({
    method: 'post',
    contentType: "application/x-www-form-urlencoded",//必须要有！！！！
    url:"selectalldynamicDelete.do",//要请求数据的文件路径
    dataType : 'json',
    striped: true, //是否显示行间隔色
  	pageNumber: 1, //初始化加载第一页，默认第一页
    pageSize:10,//单页记录数
    pageList:[5,10,20,30],//分页步进值
    pagination:true,//是否分页
    queryParamsType:'limit',//查询参数组织方式
    sidePagination:'server',//指定服务器端分页
    queryParams: function(p){
    	 return params(p);
    },
  	
    clickToSelect: true,//是否启用点击选中行
    toolbarAlign:'right',//工具栏对齐方式
    buttonsAlign:'right',//按钮对齐方式
    toolbar:'#toolbar',//指定工作栏
    columns:[
		{
		    title:'帖子编号',
		    field:'DYNAMIC_ID'
		},
        {
            title:'用户编号',
            field:'USER_ID'
        },
		{
            title:'用户姓名',
            field:'USER_NAME'
        },
        {
            title:'用户昵称',
            field:'NICK_NAME'
        },
        {
            title:'所属圈子',
            field:'THEME_NAME'
        },
        {
            title:'文字',
            field:'DYNAMIC_WORD',
            formatter:function (value,row,index){
				if(strlen(value) > 20){
					return value.substring(0,20)+'...'+"| <a href='#' onclick=showaccount('"+index+"')>详情</a>";
				}
				return value+"| <a href='#' onclick=showaccount('"+index+"')>详情</a>";
			}
        },
        {
            title:'内容',
            field:'DYNAMIC_IMG',
			formatter:function (value,row,index){
				if(value == '' || value == null){
					return "暂无信息";
				}
				if(row.DYNAMIC_TYPE == 'WORD_VIDEO'){
					a = "<video src='"+value+"' controls='controls' width='240' height='120'/>";
				}else if(row.DYNAMIC_TYPE == 'WORD_VOICE'){
					a = "<audio src='"+value+"' controls='controls'/>";
				}else{
					var strs= new Array(); //定义一数组 
					strs=value.split(","); //字符分割 
					var a = "";
					for (i=0;i<strs.length ;i++ ) 
					{ 
						a = "<img src='"+strs[i]+"' width='40px' height='40px' onclick=imgbig('"+strs[i]+"') />" + a;
					} 
				}
				return a;
			}
        },
		{
            title:'发布时间',
            field:'PUBLISH_TIME'
        },
        {
            title:'状态一',
            field:'DEL_FLG',
            formatter:function (value,row,index){
				if(value == '0'){
					return "后台删除";
				}
				if(value == '1'){
					return "未删除";
				}
				if(value == '3'){
					return "用户删除";
				}
				return "----" ;
			}
        },
        {
            title:'状态二',
            field:'CHECK_STATUS',
            formatter:function (value,row,index){
            	if(value == 'SUCCESS'){
					return "审核成功";
				}
				if(value == 'FAIL'){
					return "拒绝审核";
				}
				if(value == 'WAIT'){
					return "未审核";
				}
				return "----" ;
			}
        },
/*         {
            title:'操作',
            field:'ID',
            formatter: function (value,row,index){
				var re = "<a href='#' onclick=checkDynamic('"+row.DYNAMIC_ID+"','PASS')>通过审核</a> | "+
				"<a href='#' onclick=checkDynamic('"+row.DYNAMIC_ID+"','REFUSE')>拒绝</a>";
                return re;
            }
        } */
    ],
    locale:'zh-CN',//中文支持,
    responseHandler:function(res){
        //在ajax获取到数据，渲染表格之前，修改数据源
		all = res.rows;
        return res;
    }
})

//显示添加框
function showallmodal(id,type){
	$("#"+id).modal(type);
}

//显示详情框
function showaccount(number){
	$("#DYNAMIC_WORD").html(all[number].DYNAMIC_WORD);
	$('#DYNAMIC_WORD').emoji();
	
	showallmodal('myModal','show');
}
//审核 
function checkDynamic(dynamicId,type){
	if (confirm("确认该操作？")) {
		 jQuery.ajax({
			 url : "checkDynamic.do",
			 type : 'post',
			 data:{"dynamicId":dynamicId,"type":type},
			 dataType : 'json',
			 success : function(json) {
			 if(!json.bizSucc){
                alert(json.err_msg);
                return false;
             }else{
				alert(json.data);
				$("#mytab").bootstrapTable('refresh');
             }
			 },
			 error : function() {  
			            alert("异常！");  
			     }  
		});
	} 
}
//获取搜索的所有值
function params(params){
	 $("#a input[type='text']").each(function(){
		    params[$(this).attr("id")] = $(this).val();
	 });
	 $("#a select").each(function(){
		    params[$(this).attr("id")] = $(this).val();
	 });
	 return params;
}

//显示放大图片
function imgbig(url){
	$('#imgbig').modal('show');
	$("#bigbis").attr('src',url);
}

function strlen(str){
    var len = 0;
    for (var i=0; i<str.length; i++) { 
     var c = str.charCodeAt(i); 
    //单字节加1 
     if ((c >= 0x0001 && c <= 0x007e) || (0xff60<=c && c<=0xff9f)) { 
       len++; 
     } 
     else { 
      len+=2; 
     } 
    } 
    return len;
}
