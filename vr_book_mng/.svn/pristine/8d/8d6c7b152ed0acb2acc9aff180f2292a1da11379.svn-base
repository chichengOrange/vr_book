	//新建或更新书籍 
	function submittheme() {
		
		var themefile = $("#themefile").val();
		var bookfile = $("#bookfile").val();

		if ($("#id").val() == 0) {
			if (themefile == "") {
				alert("请选择上传图片！");
				return;
			}
			if (bookfile == "") {
				alert("请选择上传书籍！");
				return;
			}
			var strExtension = themefile.substr(themefile.lastIndexOf('.') + 1);
			strExtension = strExtension.toLocaleLowerCase();
			if (strExtension != 'jpg' && strExtension != 'gif'
					&& strExtension != 'png' && strExtension != 'bmp') {
				alert("请选择图片文件！");
				return;
			}
		}
		if (document.getElementById('PRICE').value == ""||document.getElementById('SORT').value == ""||document.getElementById('downloadCount').value == "") {
			alert("金额,下载量,推荐度均不能为空！");
			return;
		}
		$("form[name='themeform']").ajaxSubmit({
			type : "post",
			url : ($("#id").val() == "0") ? "addbook.do" : "updatebook.do",
			dataType : "json",
			contentType : "multipart/form-data; charset=utf-8",
			beforeSubmit : function() {
				$("#submitReply").attr("disabled", "disabled");
			},
			xhr: function(){ //获取ajaxSettings中的xhr对象，为它的upload属性绑定progress事件的处理函数
                 myXhr = jQuery.ajaxSettings.xhr();
                 if(progressFunction && myXhr.upload) { //检查进度函数和upload属性是否存在
                     //绑定progress事件的回调函数
                     myXhr.upload.addEventListener("progress",progressFunction, false);
                 }
                 return myXhr; //xhr对象返回给jQuery使用
             },
			success : function(data) {
				if (!data.success) {
					$("#submitReply").removeAttr("disabled");
					alert(data.message);
					return false;
				} else {
					$("#speed").html("上传成功");
					alert(data.message);
					//做一次缓存清除 防止多次修改出现的BUG
					claenmyModal();
					window.location.reload(true);
				}

			},
			error : function(e) {
				alert("异常!");
				$("#submitReply").removeAttr("disabled");
				//$(".loading").css("display","none");
			}

		});
	}
	//进度条控制
    function progressFunction(evt) {
        if (evt.lengthComputable) {
            var completePercent = Math.round(evt.loaded / evt.total * 100);
            $("#jindu").show();
            $("#jindu1").show();
            $('.speed_box').show();
            $('.speed_box1').show();
            $("#speed").html(completePercent + "%").css("width", completePercent + "%");
            $("#speed1").html(completePercent + "%").css("width", completePercent + "%");
        }
    }
