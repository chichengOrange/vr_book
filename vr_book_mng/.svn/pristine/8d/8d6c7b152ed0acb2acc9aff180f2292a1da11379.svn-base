<script type="text/javascript">
	$("#no").click(function() {
		$("#no").attr("checked", "checked");
		$("#yes").removeAttr("checked");
		$("#canDownloadValue").val("1");
	});
	$("#yes").click(function() {
		$("#yes").attr("checked", "checked");
