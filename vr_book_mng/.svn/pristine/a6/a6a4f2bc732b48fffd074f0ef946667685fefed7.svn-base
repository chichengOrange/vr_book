<?xml version="1.0" encoding="UTF-8"?>
<table sqlname="sys_role">

	<operation name="selectallrole" multiplicity="many">
		<extraparams>
			<param name="name" javatype="java.lang.String" />
			<param name="offset" javatype="java.lang.Integer" />
			<param name="limit" javatype="java.lang.Integer" />
		</extraparams>
		<sql>
			select * from sys_role
		</sql>
		<sqlmap>
			<![CDATA[
				select * from sys_role 
				where 1=1 
				<isNotEmpty property="name">
	    			AND name like '%$name$%'
	    		</isNotEmpty>
	    		order by GMT_CREATE desc 
	    		LIMIT $offset$, $limit$
			]]>	
		</sqlmap>
	</operation>
	
	<operation name="selectallrolecount" resultClass="int">
		<extraparams>
			<param name="name" javatype="java.lang.String" />
		</extraparams>
		<sql>
			select count(*) from sys_role
		</sql>
		<sqlmap>
			<![CDATA[
				select count(1) from sys_role 
				where 1=1  
				<isNotEmpty property="name">
	    			AND name like '%$name$%'
	    		</isNotEmpty>
			]]>	
		</sqlmap>
	</operation>
	
	<operation name="insertrole">
		<sql>
			insert into sys_role (ROLE_ID,NAME,CREATER,GMT_CREATE) values(?,?,?,?)
		</sql>
	</operation>
	
	<operation name="updaterole">
		<sql>
			update sys_role set NAME = ? ,MODIFIER = ?,
			GMT_MODIFIED = ?  where id = ?
		</sql>
	</operation>
	
	<operation name="updatejurisidiction">
		<sql>
			update sys_role set JURISDICTION = ? where id=?
		</sql>
	</operation>
	
	<operation name="selectjurisidiction" resultClass="java.lang.String">
		<sql>
			select JURISDICTION from sys_role where id=?
		</sql>
	</operation>
	
	<operation name="selectallroletouser" resultClass="java.util.List&lt; Map&lt;String,Object&gt; &gt;">
		<sql>
			select * from sys_role
		</sql>
	</operation>
	
	<operation name="selectByRoleId" resultClass="java.lang.String">
		<sql>
			select JURISDICTION from sys_role where ROLE_ID=?
		</sql>
	</operation>
	
	<operation name="deleteRole">
		<sql>
			delete from sys_role where ID = ?
		</sql>
	</operation>
	
	
</table>